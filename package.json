  "description": "---",
  "private": "true",
  "scripts": {
    "parcel:dev": "parcel ./src/index.html --open",
    "parcel:build": "parcel build ./src/index.html",
    "express:start": "node ./server.js",
    "clean:dist": "rimraf dist && rimraf .parcel-cache",
    "clean:parcel-cache": "rimraf dist && rimraf .parcel-cache",
    "clean": "npm-run-all clean:*",
    "makeRedirectsFile": "echo \"/* /index.html 200\" > ./dist/_redirects",
    "dev": "npm-run-all clean parcel:dev",
    "build": "npm-run-all clean parcel:build makeRedirectsFile",
    "start": "npm-run-all build express:start"
  },
