{
  "name": "messenger",
  "version": "1.0.0",
  "description": "---",
  "private": "true",
  "scripts": {
    "express:start": "node ./server.js",
    "clean:dist": "rimraf dist",
    "clean": "npm-run-all clean:*",
    "makeRedirectsFileForNetlify": "echo \"/* /index.html 200\" > ./dist/_redirects",
    "env:dev": "cross-env NODE_ENV=development",
    "env:prod": "cross-env NODE_ENV=production",
    "start": "npm-run-all build express:start",
    "build": "npm-run-all env:prod prod makeRedirectsFileForNetlify",
    "dev": "npm-run-all env:dev webpack --mode development",
    "prod": "webpack --mode production",
    "devserver": "webpack-dev-server --mode development --open",
    "serve": "npm-run-all env:dev devserver",
    "test:stylelint": "stylelint \"./src/**/*.scss\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shbchk/middle.messenger.praktikum.yandex.git"
  },
